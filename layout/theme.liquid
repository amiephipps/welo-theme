<!doctype html>
<!--[if lt IE 7]><html class="no-js lt-ie9 lt-ie8 lt-ie7" lang="en"> <![endif]-->
<!--[if IE 7]><html class="no-js lt-ie9 lt-ie8" lang="en"> <![endif]-->
<!--[if IE 8]><html class="no-js lt-ie9" lang="en"> <![endif]-->
<!--[if IE 9 ]><html class="ie9 no-js"> <![endif]-->
<!--[if (gt IE 9)|!(IE)]><!--> <html class="no-js"> <!--<![endif]-->  
<head>
  <meta charset="utf-8" />
  <!--[if IE]><meta http-equiv='X-UA-Compatible' content='IE=edge,chrome=1' /><![endif]-->

  <title>{{ page_title | capitalize }}</title>

  {% if page_description %}
  <meta name="description" content="{{ page_description | escape }}" />
  {% endif %}

  <link rel="canonical" href="{{ canonical_url }}" />

  <meta name="viewport" content="width=device-width, initial-scale=1" />
  
  {% include 'open-graph-tags' %}
  {% include 'twitter-card' %}

  {{ content_for_header }}

  {{ "fonts.css" | asset_url | stylesheet_tag }}
  {{ 'style.scss.css' | asset_url | stylesheet_tag }}
  {{ 'social/social-icons.css' | global_asset_url | stylesheet_tag }}
  {{ '//cdnjs.cloudflare.com/ajax/libs/font-awesome/4.0.3/css/font-awesome.css' | stylesheet_tag }}
  
  <link rel="shortcut icon" href="{{ 'favicon.ico' | asset_url }}" type="image/x-icon" />
  
  {{ '//fonts.googleapis.com/css?family=Source+Sans+Pro:400,600,700,400italic,600italic,700italic' | stylesheet_tag }}

  <!--[if lt IE 9]>
  {{ '//html5shiv.googlecode.com/svn/trunk/html5.js' | script_tag }}
  <![endif]-->

  {{ 'shopify_common.js' | shopify_asset_url | script_tag }}
  {% if template contains 'customers' %}  
  {{ 'customer_area.js'  | shopify_asset_url | script_tag }}
  {% endif %}
  
  <!-- Additional Shopify helpers that will likely be added to the global shopify_common.js some day soon. -->
  {{ 'shopify_common.js'  | asset_url | script_tag }}

  {{ 'option_selection.js' | shopify_asset_url | script_tag }}

  {{ '//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js' | script_tag }}
  {{ 'jQuery-FontSpy.js' | asset_url | script_tag }}
  {{ 'bigText.js' | asset_url | script_tag }}
  {{ 'weloscript.js' | asset_url | script_tag }}
  <script>jQuery('html').removeClass('no-js').addClass('js');</script>

</head>

{% comment %}<body id="{{ page_title | handle }}" class="{% if customer %}customer-logged-in {% endif %}template-{{ template | replace: '.', ' ' | truncatewords: 1, '' | handle }}" >{% endcomment %}
<body id="{{ page_title | handle }}" class="template-{{ template | replace: '.', ' ' | truncatewords: 1, '' | handle }}" >

    <header class="row wrapper relative">

      {% comment %}
        Show and h1 tag and hide it for SEO
      {% endcomment %}
      {% if template == 'index' %}
      <h1 class="hidden">{{ shop.name }}</h1>
      {% endif %}
      

      {% if settings.use_logo %}
      <a id="logo" href="/" class="absolute logoContainer">
        {{ 'weloLogo.png' | asset_url | img_tag: shop.name }}
      </a>
      {% endif %}


      <div class="clear">
      
        {% comment %}
          Main Navigation 
        {% endcomment %}
        {% include 'site-nav' %}
      
      </div>
      
    </header>

    <main id="main" role="main">
      {% comment %}}
        We have a template file to render.
        That's what content_for_layout is for.
      {% endcomment %}
      {{ content_for_layout }}
    </main>

    <footer>
  
	    <div class="wrapper">
        <ul>
          <li class="socialLink"><a href="{{ settings.facebook_url }}" title="Follow us on Facebook" target="_blank" >{{ 'facebook.png' | asset_url | img_tag }}</a></li>
          <li class="socialLink"><a href="{{ settings.twitter_url }}" title="Follow us on Twitter" target="_blank">{{ 'twitter.png' | asset_url | img_tag }}</a></li>
          <li class="socialLink"><a href="{{ settings.instagram_url }}" title="Follow us on Instagram" target="_blank" c>{{ 'instagram.png' | asset_url | img_tag }}</a></li>
          <li class="socialLink"><a href="{{ settings.twitter_url }}" title="Follow us on Twitter" target="_blank"><span>@DRINKWELO</span></a></li>
        </ul>
	    </div>   

    </footer>
    
  {{ 'shop.js'  | asset_url | script_tag }}
  {{ 'skrollr.min.js' | asset_url | script_tag }}

</body>
</html>